{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"rootDir": "./",
		"outDir": "./build",
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./"
	},
	"include": ["./**/*"],
	"exclude": ["node_modules"]
}
